<Window x:Class="OODMayExam2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OODMayExam2022"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="5,96,5,5" Name="lbxRentalPriceType" SelectionChanged="lbxRentalPriceType_SelectionChanged"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,96,26,113" Name="tblkRentalDesc" Grid.RowSpan="2"/>
        <Button x:Name="btnAdd" Content="ADD" Grid.Column="1" HorizontalAlignment="Left" Margin="21,122,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblPropertyListing" Content="Property Listing" HorizontalAlignment="Left" Margin="87,27,0,0" VerticalAlignment="Top" FontSize="24"/>




    </Grid>
</Window>
